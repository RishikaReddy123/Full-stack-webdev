<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
</head>
<link rel="stylesheet" href="style.css">
<body>
    <h3>All chats</h3>
    <form method = "GET" action="/chats/new">
        <button>
          New chat
        </button>
    </form>
    <br/>
    <% for(let chat of chats){ %>
        <div class="chat">
            <p><i>from: <%= chat.from %></i></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <form method="get" action="/chats/<%= chat._id %>/edit">
                    <button>Edit</button>
                </form>
                <br/>
                <form method="post" action="/chats/<%= chat._id %>?_method=DELETE">
                    <button>Delete</button>
                </form>
            </div>
            <p><i>Received by: <%= chat.to %></i></p>
            <hr/>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0, 4).join("-") %></p>
        </div>
        <br/>
        <br/>
    <% } %>
</body>
</html>

